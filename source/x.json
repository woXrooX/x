{
	"version": "0.207.0.0015",

	"flask": {
		"root_path": null,
		"template_folder": "www/HTML",
		"static_folder": "www/static",
		"static_url_path": "/"
	},

	"eMail": {
		"regEx": "^[a-zA-Z0-9][a-zA-Z0-9.!#$%&'*+=?^_`{|}~-]{0,62}[a-zA-Z0-9]@[a-zA-Z0-9][a-zA-Z0-9-]+[a-zA-Z0-9](?:\\.[a-zA-Z]+)+$",
		"subject": "x",

		"SendGrid": {
			"enabled": false,
			"domain": null,
			"api_key": null
		}
	},

	"default": {
		"title": "x",
		"charset": "utf-8",
		"currency": "USD",

		"language": {
			"fallback": "en",
			"supported": ["en"]
		},

		"URL": {
			"prefix": "https",
			"sub_domain": "www",
			"domain_name": "woXrooX",
			"domain_extension": "com",
			"port": null
		}
	},

	"tools": {
		"debug": true,

		"log_in_tools": {
			"enable_recording": false
		}
	},

	"pages": {
		"index": {
			"enabled": true,
			"endpoints": ["/"]
		},

		"home": {
			"enabled": true,
			"endpoints": ["/home"]
		},

		"sign_up": {
			"enabled": false,
			"authenticity_statuses": ["unauthenticated"],
			"methods": ["GET", "POST"],
			"endpoints": ["/sign_up"]
		},

		"log_in": {
			"enabled": false,
			"authenticity_statuses": ["unauthenticated"],
			"methods": ["GET", "POST"],
			"endpoints": ["/log_in"]
		},

		"eMail_confirmation": {
			"enabled": false,
			"authenticity_statuses": ["unauthorized"],
			"methods": ["GET", "POST"],
			"endpoints": ["/eMail_confirmation"]
		},

		"log_out": {
			"enabled": false,
			"authenticity_statuses": ["unauthorized", "authorized"],
			"methods": ["GET", "POST"],
			"endpoints": ["/log_out"]
		},

		"log_out_instant": {
			"enabled": false,
			"authenticity_statuses": ["unauthorized", "authorized"],
			"methods": ["GET", "POST"],
			"endpoints": ["/log_out_instant"]
		},

		"request_password_recovery": {
			"enabled": false,
			"authenticity_statuses": ["unauthenticated"],
			"methods": ["GET", "POST"],
			"endpoints": ["/request_password_recovery"]
		},

		"reset_password": {
			"enabled": false,
			"authenticity_statuses": ["unauthenticated"],
			"methods": ["GET", "POST"],
			"endpoints": ["/reset_password"],
			"URL_args": ["TOKEN"]
		},

		"x_actions": {
			"enabled": false,
			"roles": ["root"],
			"methods": ["GET", "POST"],
			"endpoints": ["/x/actions"]
		},

		"x_feedback_leave": {
			"enabled": false,
			"methods": ["POST"],
			"endpoints": ["/x/feedback/leave"]
		},

		"x_feedback": {
			"enabled": false,
			"methods": ["GET", "POST"],
			"endpoints": ["/x/feedback"]
		},

		"x_log_in_records": {
			"enabled": false,
			"roles": ["root"],
			"methods": ["GET", "POST"],
			"endpoints": ["/x/log_in_records"]
		},

		"x_notification": {
			"enabled": false,
			"authenticity_statuses": ["unauthorized", "authorized"],
			"methods": ["GET", "POST"],
			"endpoints": ["/x/notification"],
			"URL_args": ["ID"]
		},

		"x_notifications": {
			"enabled": false,
			"authenticity_statuses": ["unauthorized", "authorized"],
			"methods": ["GET", "POST"],
			"endpoints": ["/x/notifications"]
		},

		"x_user": {
			"enabled": false,
			"roles": ["root"],
			"methods": ["GET", "POST"],
			"endpoints": ["/x/user"],
			"URL_args": ["id"]
		},

		"x_users": {
			"enabled": false,
			"roles": ["root"],
			"methods": ["GET", "POST"],
			"endpoints": ["/x/users"]
		}
	},

	"menu": {
		"enabled": true,
		"menus": [
			{"page": "home", "icon": "home"},
			{"page": "sign_up"},
			{"page": "log_in"},
			{"page": "log_out"}
		]
	},

	"username": {
		"min_length": 6,
		"max_length": 50,
		"regEx": "^[a-zA-Z0-9'_-]+$"
	},

	"password": {
		"min_length": 6,
		"max_length": 50,
		"regEx": "^[a-zA-Z0-9!@#$%^&*-_+]+$",
		"hashing_algorithm": null,
		"recovery_link_validity_duration": 15
	},

	"phone_number": {
		"regEx": "^[+]{1,1}[0-9]{11,11}$"
	}
}
